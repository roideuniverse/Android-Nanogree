<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Main Activity -->
    <style name="main_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="main_button_orange">
        <item name="android:layout_margin">@dimen/half_margin</item>
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:background">@color/main_button_orange</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="main_button_red" parent="main_button_orange">
        <item name="android:background">@color/main_button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
